{
   "version": "0.2.0",
   "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 8000,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
     {
       "name": ".NET Core Launch (web)",
       "type": "coreclr",
       "request": "launch",
       "preLaunchTask": "build",
       "program": "${workspaceFolder}/bin/Debug/net8.0/Ultimate POS Api.dll",
       "args": [],
       "cwd": "${workspaceFolder}",
       "stopAtEntry": false,
       "serverReadyAction": {
         "action": "openExternally",
         "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
       },
       "env": {
         "ASPNETCORE_ENVIRONMENT": "Development"
       },
       "envFile": "${workspaceFolder}/.env",
       "requireExactSource": false
     }
   ]
 }
 